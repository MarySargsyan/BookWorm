@model PagedList.IPagedList<BW.Models.Clubs>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Home Page";
}

<br />
<br />
<div class="ui center aligned basic segment">
    <form asp-controller="Home" asp-action="Index" class="ui input">
        <input type="text" name="SearchString" placeholder="Жанры/тэги/книги">
        <button style="background-color: rgba(51, 51, 51, 1);
        color: #9D9D9D;" class="ui icon button">
            <i class="search icon"></i>
        </button>
    </form>

    <div class="ui horizontal divider">
        Или
    </div>
    <a href="~/Clubs/Create" style="background-color: rgba(51, 51, 51, 0.9);
        color: #9D9D9D;" class="ui teal labeled icon button">
        Создать новый клуб
        <i class="add icon"></i>
    </a>
</div>
<br />


<div class="ui link cards">

    @foreach (var Clubs in Model)
    {

        <div class="card">

            <a class="image" href="~/Home/Clubpage/@Clubs.Id">
                <img style=" height: 180px; " src="@Clubs.Image" />
            </a>
            <div class="content">
                <div class="ui placeholder">

                    <h2 class="ui header">
                        <i class="@Clubs.Icon"></i>
                        <div class="content">
                            @Clubs.Name
                            <div class="sub header">@Clubs.Discription</div>
                        </div>
                    </h2>
                </div>

            </div>
            <div class="sub content">

                @foreach (var Tags in Clubs.Tags)
                {
                    <div class="ui label">
                        @Tags.Name
                    </div>
                }
            </div>
        </div>
    }
</div>
<br />
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))